#include "stdafx.h"
#include <iostream>
#include <math.h>
#include "conio.h"
#include "stdlib.h"

using namespace std;

float total(float n, float c)
{
	float m=n*c;
	return m;
}
void main()
{
	float numh, costh, valor;
	int n, i=1;
	cout<<"Introduzca el numero de empleados"<<endl;
	cin>>n;
	while(i<=n)
	{
		cout<<"Introduzca las horas trabajadas: "<<endl;
		cin>>numh;
		cout<<"Introduzca el costo por hora: "<<endl;
		cin>>costh;
		valor= total(numh, costh);
		cout<<"el trabajador "<<i<<" gano un total de: "<<valor<<endl;
		i=i+1;
		getch();
		system("cls");
	}
	cout<<"SALIR"<<endl;
	getch();
}
