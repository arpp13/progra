#include "stdafx.h"
#include <iostream>
#include <math.h>
#include <conio.h>

using namespace std;
float total(float n, float c)
{
	float m=n*c;
	return m;
}
void main()
{
	float numh, costh, valor;
	cout<<"Introduzca las horas trabajadas: "<<endl;
	cin>>numh;
	cout<<"Introduzca el costo por hora: "<<endl;
	cin>>costh;
	valor= total(numh, costh);
	cout<<"el trabajador gano un total de: "<<valor<<endl;
	getch();
}
