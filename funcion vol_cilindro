#include "stdafx.h"
#include <iostream>
#include <math.h>
#include <conio.h>
#define PI 3.141516

using namespace std;
float vol_cilindro (float r, float a)
 { 
	 float v=PI*r*r*a ;	
    return v;    
}
void main()
{
    float radio, altura, volumen;	
    cout <<"Ingrese el radio:"<<endl; 
	cin >>radio;	
    cout <<"Ingrese la altura:"<<endl;
	cin >> altura;	
    volumen= vol_cilindro(radio,altura);
    cout <<"El volumen es:" <<volumen;    
	getch();
 }
