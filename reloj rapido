#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
using namespace std;
void main()
{
	int m=0, s=0, h=0;
	while(s<60)
	{
		cout<<h<<" : "<<m<<" : "<<s<<endl;
		s=s+1;
		if(s==60)
		{
			s=0;
			m=m+1;
		}
		if(m==60)
		{
			m=0;
			h=h+1;
		}
		if(h==24)
		{
			h=0;
		}
		system("cls");
	}
	getch();
}
